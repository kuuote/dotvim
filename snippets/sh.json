{
  "fin": {
    "body": [
      "${1:fn} () {",
      "\t$0",
      "}",
      "trap $1 EXIT"
    ],
    "description": "",
    "prefix": "fin"
  },
  "ift": {
    "body": [
      "if [[ $1 ]]; then",
      "  $0",
      "fi"
    ],
    "description": "if with test expression",
    "prefix": "ift"
  },
  "mktemp": {
    "body": [
      "tmp=\\$(mktemp$0)",
      "",
      "atexit() {",
      "\tsudo rm -rf \\${tmp}",
      "}",
      "trap atexit EXIT"
    ],
    "description": "mktemp and atexit",
    "prefix": "tmp"
  },
  "sudo": {
    "body": [
      "if [ \\$(id -u) != 0 ]; then exec sudo \\$0 \"\\$@\"; fi"
    ],
    "description": "execute script with sudo",
    "prefix": "sudo"
  },
  "var": {
    "body": [
      "{$1}"
    ],
    "description": "variable braces",
    "prefix": "v"
  },
  "while_not": {
    "body": [
      "while ! ${1:cond} ; do",
      "\t${0:cmd}",
      "done"
    ],
    "description": "while with !",
    "prefix": "wn"
  }
}
