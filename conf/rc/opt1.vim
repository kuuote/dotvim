" 1行オプション
set backspace=indent,eol,start " いい感じにBackspaceが効くように
set helplang=ja                " 日本語helpがあると優先する
set hidden                     " ファイルを変更したまま裏に移動できるようにする
set incsearch                  " 検索の結果をリアルタイムで表示する
set mouse=nvr                  " マウスでスクロールできるようにする
set noshowmode                 " ddc.vimを使用しているとモード表示がちらつくので切る
set termguicolors              " フルカラーは人権
set ttimeout                   " タイムアウトを設けることによりEscを単体で入力できるようにする
set ttimeoutlen=100            " defaults.vimより
